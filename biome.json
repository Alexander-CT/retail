{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useConst": "off",
                "noNonNullAssertion": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off",
                "useButtonType": "off",
                "useKeyWithClickEvents": "off"
            },
            "complexity": {
                "noForEach": "off",
                "noStaticOnlyClass": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingComma": "es5",
            "quoteProperties": "asNeeded",
            "arrowParentheses": "always",
            "jsxQuoteStyle": "single"
        }
    },
    "files": {
        "ignore": ["node_modules", "dist"]
    }
}
